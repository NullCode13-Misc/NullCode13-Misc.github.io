  },
  "homepage": "https://github.com/NullCode13-Misc/nullcode13-misc.github.io#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "node-sass": "^8.0.0",
    "onchange": "^7.1.0",
    "postcss-cli": "^10.1.0",
    "postcss-scss": "^4.0.6",
    "stylelint": "^14.16.0"
  }
}
