{
  "name": "redshop",
  "version": "1.0.0",
  "description": "Official website for redshop",
  "main": "index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",

    "css:scss": "node-sass --output-style compressed -o dist src/scss",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "css:lint": "stylelint src/scss/*.scss  --custom-syntax postcss-scss",
    "css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",

    "watch:css": "onchange \"src/scss\" -- npm run css"
  },
